{% extends 'base_dashbord.html.twig' %}

{% block title %}Ajouter Voyage
{% endblock %}

{% block body %}
	<div class="row">
		<div class="col-md-6">

			<img src="{{asset('assets/img/newpersonel.png')}}" class="card">

		</div>
		<div class="col-md-6">
			{{ form_start(formajoutvoyage,{'action':'/Voyages/ajoutervoyage'})}}
			<div class="card ">
				<div class="card-header card-header-rose card-header-icon">
					<div class="card-icon">
						<i class="fa fa-user"></i>
					</div>
					<h4 class="card-title">Ajouter Voyage</h4>
				</div>
				<div class="card-body ">
					<div class="form-group bmd-form-group">
						<label for="pointDebut" class="bmd-label-floating">
							pointDebut *</label><br>
						{{ form_row(formajoutvoyage.pointDebut, {'attr' : {'class':'form-control datepicker','required':'true'}}) }}
					</div>
                    <div class="form-group bmd-form-group">
						<label for="pointFinale" class="bmd-label-floating">
							 pointFinale *</label><br>
						{{ form_row(formajoutvoyage.pointFinale, {'attr' : {'class':'form-control','required':'true'}}) }}
					</div>
					<div class="form-group bmd-form-group">
						<label for="dateDebut" class="bmd-label-floating">
							dateDebut *</label><br>
						{{ form_row(formajoutvoyage.dateDebut, {'attr' : {'class':'form-control','format':'dd/mm/yyyy','required':'true'}}) }}
					</div>
					<div class="form-group bmd-form-group">
						<label for="dateFinale" class="bmd-label-floating">
							dateFinale *</label><br>
						{{ form_row(formajoutvoyage.dateFinale, {'attr' : {'class':'form-control','format':'dd/mm/yyyy','required':'true'}}) }}
					</div>
                    <div class="form-group bmd-form-group">
						<label for="Chauffeur" class="bmd-label-floating">
							Chauffeur *</label><br>
							<select class="form-group bmd-form-group" name="chauffeur">
						{% for C in ChauffeurList %}
							<option value="{{C.id}}">{{C.nom}} {{C.prenom}}</option>
						{% endfor %}
							</select>
					</div>
					<div class="category form-category">* Obligatoire</div>
				</div>
				<div class="card-footer text-right">
					<div class="form-check mr-auto"></div>
					<button type="submit" class="btn btn-rose">
						<i class="fa fa-plus"></i>
						Ajouter</button>
				</div>
			</div>
			{{ form_end(formajoutvoyage)}}
		</div>


	</div>
{% endblock %}
