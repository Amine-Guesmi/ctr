{% extends 'base_dashbord.html.twig' %}

{% block title %}Gestion Chauffeur
{% endblock %}

{% block body %}
	<div class="row">
	<div class="col-lg-4 col-md-6 col-sm-6">
			
		</div>
		<div class="col-lg-4 col-md-6 col-sm-6">
			<div class="card card-stats">
				<div class="card-header card-header-warning card-header-icon">
					<div class="card-icon">
						<i class="material-icons">equalizer</i>
					</div>
					<p class="card-category">Nombre des chauffeurs</p>
					<h3 class="card-title">{{Nbr_chauffeurs}}</h3>
				</div>
				<div class="card-footer">
					<div class="stats">
						<i class="material-icons text-danger">warning</i>
						<a href="#pablo">Get More Space...</a>
					</div>
				</div>
			</div>
		</div>
	</div> 
	<div class="row">
    <div class="col-md-12">
              <div class="card">
                <div class="card-header card-header-rose card-header-icon">
                  <div class="card-icon">
                    <i class="material-icons">assignment</i>
                  </div>
                  <h4 class="card-title">Chauffeur</h4>
                </div>
                <div class="card-body">
                <div class="card-header card-header-rose card-header-icon">
					<a href="{{path('AjouterChauffeur')}}" style="color:white;">
						<div class="card-icon" style="float:right;cursor:pointer;">
							<i class="fa fa-plus"></i><i class="fa fa-truck"></i>
						</div>

						<h4 class="card-title"></h4>
					</a>
				</div>
                  <div class="table-responsive">
                    <table class="table">
                      <thead>
								<tr>
									<th>Nom</th>
									<th>Prenom</th>
									<th>Telephone</th>
									<th>Image</th>
                                     <th>User</th>
									<th class="disabled-sorting text-right">Actions</th>
								</tr>
							</thead>
							<tfoot>
								<tr>
									<th>Nom</th>
									<th>Prenom</th>
									<th>Telephone</th>
									<th>Image</th>
                                    <th>User</th>
									<th class="text-right">Actions</th>
								</tr>
							</tfoot>
                      <tbody>
                       {% for U in ChauffeursList | sort((a, b) => a.id <=> b.id)%}

									<tr>
										<td>{{U.nom}}</td>
										<td>{{U.prenom}}</td>
										<td>{{U.tel}}</td>
										<td>
											<div class="fileinput fileinput-new text-center" data-provides="fileinput" style="max-width: 50%;">
												<div class="fileinput-new thumbnail img-circle">
													<img src="{{ asset ('/uploads/images/chauffeurs/' ~ U.image ) }}" alt="...">
												</div>
												<div class="fileinput-preview fileinput-exists thumbnail img-circle"></div>
											</div>
										</td>
										<td>{{U.User}}</td>
										<td class="text-right">
											<a  href="gestionchauffeur/modifierchauffeur/{{U.id}}" class="btn btn-link btn-info btn-just-icon like">
												<i class="material-icons">edit</i>
											</a>
											<a href="gestionchauffeur/deletechauffeur/{{U.id}}"class="btn btn-link btn-danger btn-just-icon remove">
												<i class="material-icons" >delete</i>
											</a>
										</td>
                                
									</tr>
						{% endfor %}
                      </tbody>
                    </table>
                  </div>
                </div>
              </div>
            </div>
            </div>
				
				
	{% endblock %}

	{% block script %}
		

	{% endblock %}
