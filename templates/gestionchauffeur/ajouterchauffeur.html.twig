{% extends 'base_dashbord.html.twig' %}

{% block title %}Ajouter Chauffeur
{% endblock %}

{% block body %}
	<div class="row">

		<div class="col-md-4">
			{{ form_start(formajoutchauffeur,{'action':'/gestionchauffeur/ajouterchauffeur'})}}
			<div class="card ">
				<div class="card-header card-header-rose card-header-icon">
					<div class="card-icon">
						<i class="fa fa-truck"></i>
					</div>
					<h4 class="card-title">Ajouter Chauffeur</h4>
				</div>
				<div class="card-body ">
					<div class="form-group bmd-form-group">
						<label for="Name" class="bmd-label-floating">
							Nom *</label>
						{{ form_row(formajoutchauffeur.nom, {'attr' : {'class':'form-control','required':'true'}}) }}
					</div>
					<div class="form-group bmd-form-group">
						<label for="LastName" class="bmd-label-floating">
							Prenom *</label>
						{{ form_row(formajoutchauffeur.prenom, {'attr' : {'class':'form-control','required':'true'}}) }}
					</div>
					<div class="form-group bmd-form-group">
						<label for="examplePassword1" class="bmd-label-floating">
							Telephone *</label>
						{{ form_row(formajoutchauffeur.tel, {'attr' : {'class':'form-control','required':'true'}}) }}
					</div>

					<div class="form-group bmd-form-group"></div>
                      <label for="image" class="bmd-label-floating">
							Image *</label>
					<div class="fileinput fileinput-new text-center" data-provides="fileinput">
						<div class="fileinput-new thumbnail">
							<img src="../../assets/img/image_placeholder.jpg" alt="image">
						</div>
						<div class="fileinput-preview fileinput-exists thumbnail"></div>
						<div>
							<span class="btn btn-rose btn-round btn-file">
								{{ form_row(formajoutchauffeur.image, {'attr' : {'required':'true','name':'image'}}) }}
							</span>
						</div>
					</div>
					<div class="category form-category">* Obligatoire</div>
				</div>
				<div class="card-footer text-right">
					<div class="form-check mr-auto"></div>
					<button type="submit" class="btn btn-rose">
						<i class="fa fa-plus"></i>
						Ajouter</button>
				</div>
			</div>
			{{ form_end(formajoutchauffeur)}}
		</div>
		<div class="col-md-7">

			<img src="{{asset('assets/img/ajouterchauffeur.jpg')}}" class="card">

		</div>

	</div>
{% endblock %}
