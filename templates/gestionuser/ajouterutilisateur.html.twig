{% extends 'base_dashbord.html.twig' %}

{% block title %}Ajouter Utilisateur
{% endblock %}

{% block body %}
	<div class="row">
		<div class="col-md-6">

			<img src="{{asset('assets/img/newpersonel.png')}}" class="card">

		</div>
		<div class="col-md-6">
			{{ form_start(formajoutuser,{'action':'/AjoutUtilisateurFORM'})}}
				<div class="card ">
					<div class="card-header card-header-rose card-header-icon">
						<div class="card-icon">
							<i class="fa fa-user"></i>
						</div>
						<h4 class="card-title">Ajouter Utilisateur</h4>
					</div>
					<div class="card-body ">
						<div class="form-group bmd-form-group">
							<label for="Name" class="bmd-label-floating">
								Nom *</label>
							 {{ form_row(formajoutuser.nom, {'attr' : {'class':'form-control','required':'true'}}) }}
						</div>
						<div class="form-group bmd-form-group">
							<label for="LastName" class="bmd-label-floating">
								Prenom *</label>
							{{ form_row(formajoutuser.prenom, {'attr' : {'class':'form-control','required':'true'}}) }}
						</div>
						<div class="form-group bmd-form-group">
							<label for="exampleEmail" class="bmd-label-floating">
								Address Email*</label>
							{{ form_row(formajoutuser.email, {'attr' : {'class':'form-control','required':'true'}}) }}
						</div>
						<div class="form-group bmd-form-group">
							<label for="examplePassword1" class="bmd-label-floating">
								Telephone *</label>
							{{ form_row(formajoutuser.tel, {'attr' : {'class':'form-control','required':'true'}}) }}
						</div>
						<div class="form-group bmd-form-group">
							<label for="examplePassword" class="bmd-label-floating">
								Mot de pass *</label>
							{{ form_row(formajoutuser.password, {'attr' : {'class':'form-control','required':'true'}}) }}
						</div>
						<div class="form-group bmd-form-group">
							<label for="examplePassword1" class="bmd-label-floating">
								Confirmer Mot de pass *</label>
							<input type="password" class="form-control" id="examplePassword1" required="true" equalto="#examplePassword" name="password_confirmation" aria-required="true">
						</div>
            <div class="form-group bmd-form-group">
							<label for="exampleEmail" class="bmd-label-floating">
								Address *</label>
							{{ form_row(formajoutuser.adresse, {'attr' : {'class':'form-control','required':'true'}}) }}
						</div>
               <div class="select-box">
            <label for="select-box1" class="label select-box1"></label>
           {{ form_row(formajoutuser.roles, {'attr' : {'placeholder':'Choisire Role','class':'select'}}) }}
            </div>
            <div class="form-group bmd-form-group">
							
						</div>
            <div class="fileinput fileinput-new text-center" data-provides="fileinput">
                        <div class="fileinput-new thumbnail">
                          <img src="../../assets/img/image_placeholder.jpg" alt="image">
                        </div>
                        <div class="fileinput-preview fileinput-exists thumbnail"></div>
                        <div>
                          <span class="btn btn-rose btn-round btn-file">
                            <span class="fileinput-new">Select image</span>
                            {{ form_row(formajoutuser.image, {'attr' : {'required':'true','name':'image'}}) }}
                          </span>
                        </div>
            </div>
                        <div class="fileinput fileinput-new text-center float-right" data-provides="fileinput">
                        <div class="fileinput-new thumbnail">
                          <img src="../../assets/img/file_placeholder.png" alt="cv">
                        </div>
                        <div class="fileinput-preview fileinput-exists thumbnail"></div>
                        <div>
                          <span class="btn btn-rose btn-round btn-file">
                            <span class="fileinput-new">CV</span>
                            {{ form_row(formajoutuser.cvFile, {'attr' : {'required':'true','name':'cv'}}) }}
                          </span>
                        </div>
            </div>
						<div class="category form-category">* Obligatoire</div>
					</div>
					<div class="card-footer text-right">
						<div class="form-check mr-auto"></div>
						<button type="submit" class="btn btn-rose">
							<i class="fa fa-plus"></i>
							Ajouter</button>
					</div>
				</div>
			{{ form_end(formajoutuser)}}
		</div>


	</div>
{% endblock %}
