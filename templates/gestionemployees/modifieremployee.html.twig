{% extends 'base_dashbord.html.twig' %}

{% block title %}Modifier Employee
{% endblock %}

{% block body %}
	<div class="row">
		<div class="col-md-6">

			<img src="{{asset('assets/img/newpersonel.png')}}" class="card">

		</div>
		<div class="col-md-6">
			{{ form_start(formeditemployee)}}
			<div class="card ">
				<div class="card-header card-header-rose card-header-icon">
					<div class="card-icon">
						<i class="fa fa-employee"></i>
					</div>
					<h4 class="card-title">Modifier Employee</h4>
				</div>
				<div class="card-body ">
					<div class="form-group bmd-form-group">
						<label for="Name" class="bmd-label-floating">
							Nom *</label>
						{{ form_row(formeditemployee.nom, {'attr' : {'class':'form-control','required':'true'}}) }}
					</div>
					<div class="form-group bmd-form-group">
						<label for="LastName" class="bmd-label-floating">
							Prenom *</label>
						{{ form_row(formeditemployee.prenom, {'attr' : {'class':'form-control','required':'true'}}) }}
					</div>
					<div class="form-group bmd-form-group">
						<label for="exampleEmail" class="bmd-label-floating">
							Address Email*</label>
						{{ form_row(formeditemployee.email, {'attr' : {'class':'form-control','required':'true'}}) }}
					</div>
					<div class="form-group bmd-form-group">
						<label for="examplePassword1" class="bmd-label-floating">
							Telephone *</label>
						{{ form_row(formeditemployee.tel, {'attr' : {'class':'form-control','required':'true'}}) }}
					</div>
					<div class="form-group bmd-form-group">
						<label for="examplePassword" class="bmd-label-floating">
							Salaire *</label>
						{{ form_row(formeditemployee.salaire, {'attr' : {'class':'form-control','required':'true'}}) }}
					</div>
					<div class="form-group bmd-form-group">
						<label for="exampleEmail" class="bmd-label-floating">
							Address *</label>
						{{ form_row(formeditemployee.adresse, {'attr' : {'class':'form-control','required':'true'}}) }}
					</div>
					<div class="col-lg-5 col-md-6 col-sm-3">
						{{ form_row(formeditemployee.dateNais, {'attr' : {'placeholder':'Choisire Role','class':'selectpicker ','data-style':'select-with-transition' ,'multiple':'', 'title':'Choose City', 'data-size':'7', 'tabindex':'-98'}}) }}
					</div>
					<div class="form-group bmd-form-group"></div>
					<label for="image" class="bmd-label-floating">
						Image *</label>
					<div class="fileinput fileinput-new text-center" data-provides="fileinput">
						<div class="fileinput-new thumbnail">
							<img src="{{ asset ('/uploads/images/employees/' ~ oldImage ) }}" alt="...">
						</div>
						<div class="fileinput-preview fileinput-exists thumbnail"></div>
						<div>
							<span class="btn btn-rose btn-round btn-file">
								{{ form_row(formeditemployee.Image, {'attr' : {'name':'image','hidden':'true'}}) }}
								<span class="fileinput-new" name="image">Choisir Image</span>
							</span>
						</div>
					</div>
										<div class="fileinput fileinput-new text-center float-right" data-provides="fileinput">
						<div class="fileinput-new thumbnail">
							<img src="{{ asset ('/uploads/cvs/employees/' ~ oldCV ) }}" alt="...">

						</div>
						<div class="fileinput-preview fileinput-exists thumbnail"></div>
						<div>
							<label for="image" class="bmd-label-floating">CV *</label>
							<span class="btn btn-rose btn-round btn-file">
								<span class="fileinput-new" name="cv">Choisir CV</span>
								{{ form_row(formeditemployee.cv, {'attr' : {'name':'cvFile','hidden':'true'}}) }}
							</span>
						</div>
					</div>
					<div class="col-lg-5 col-md-6 col-sm-3">
						<select name="SelectUser" value={{oldSelectUser}} id="SelectUser">
							{% for U in UsersList %}
								<option value='{{U.id}}'>{{U.nom}}
									{{U.prenom}}</option>
							{% endfor %}
						</select>
					</div>
					<div class="col-lg-5 col-md-6 col-sm-3">
						<select name="SelectDepartement" value={{oldSelectDepartement}} id="SelectDepartement">
							{% for D in DepartementsList %}
								<option value='{{D.id}}'>{{D.Libelle}}</option>
							{% endfor %}
						</select>
					</div>
					<div class="category form-category">* Obligatoire</div>

					<div class="card-footer text-right">
						<div class="form-check mr-auto"></div>
						<button type="submit" class="btn btn-rose">
							<i class="fa fa-plus"></i>
							Modifier</button>
					</div>
				</div>
				{{ form_end(formeditemployee)}}
			</div>


		</div>
	{% endblock %}
